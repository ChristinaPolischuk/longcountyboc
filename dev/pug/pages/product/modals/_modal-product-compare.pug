mixin productCompareTopItem(src, alt, text)
    .product-compare-top__item
        .product-compare-top__img
            picture
                source(type="image/webp", srcset=`${src}.webp`)
                img(src=`${src}.png`, alt=alt)
        .product-compare-top__info
            span.product-compare-top__text=text
            button.btn-add-to-compare.js-compare
                span.btn-add-to-compare__text Add to compare


.modal-background.js-modal-product-compare
    .modal-container
        .modal
            .modal-content
                span.modal-close

                form.product-compare-form
                    h2.modal-title Dewalt DC771 Dewalt DC771
                    .product-compare-form__group
                        input.product-compare-form__field(type="text", placeholder="Type here to compare", autocomplete="off", data-url="/match-titles/", data-list="js-search-mathes-list")
                        .search-matches.js-search-mathes-list

                        button.btn-add-review.btn-add-review--small
                            span.btn-add-review__text Compare with
                            span.btn-add-review__dialog
                                +icon("btn-arrow-right", "btn-add-review__icon-dialog")
                                span.btn-add-review__dialog-text Compare with...

                h2.modal-title Top
                .product-compare-top
